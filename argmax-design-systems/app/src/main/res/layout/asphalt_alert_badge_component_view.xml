<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="328dp"
        android:layout_height="32dp"
        android:background="@drawable/asphalt_red60_round_corner_rectangle_shape">

        <TextView
            android:id="@+id/asphalt_design_system_fragment_alert_badge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/WHITE"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/asphalt_alert_badge_text" />

        <TextView
            android:id="@+id/asphalt_design_system_fragment_alert_badge_nude_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/neo_sans_pro_medium"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/asphalt_alert_badge_nude_button"
            android:textAllCaps="true"
            android:textColor="@color/WHITE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>